@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Product List</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add New Product
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width: 60px;">ID</th>
                    <th>Name</th>
                    <th style="width: 120px;">Price (AZN)</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-center">@product.Id</td>
                        <td>@product.Name</td>
                        <td class="text-end">@product.Price.ToString("0.00")</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger ms-1" asp-action="Delete" asp-route-id="@product.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
